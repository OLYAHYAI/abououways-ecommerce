# Backend Environment Variables (Strapi)
# Copy this file to .env and fill in your values

# Server Configuration
HOST=0.0.0.0
PORT=1337
NODE_ENV=production

# Database Configuration (PostgreSQL)
DATABASE_CLIENT=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=abououways_db
DATABASE_USERNAME=abououways_user
DATABASE_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Secrets (CHANGE THESE!)
APP_KEYS=CHANGE_ME_KEY1,CHANGE_ME_KEY2,CHANGE_ME_KEY3,CHANGE_ME_KEY4
API_TOKEN_SALT=CHANGE_ME_SALT
ADMIN_JWT_SECRET=CHANGE_ME_ADMIN_JWT_SECRET
JWT_SECRET=CHANGE_ME_JWT_SECRET

# Admin Configuration
ADMIN_PATH=/admin

# CORS Configuration
# CLIENT_URL=https://abououways.ma

# Email Configuration (Optional)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@example.com
# SMTP_PASSWORD=your-password
# SMTP_FROM=noreply@abououways.ma

# Upload Configuration
# UPLOAD_PROVIDER=local
# UPLOAD_SIZE_LIMIT=52428800

